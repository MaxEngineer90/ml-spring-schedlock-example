<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-email-log-table" author="system">
        <comment>Create email log table to track sent emails</comment>
        
        <createTable tableName="email_log">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="recipient" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="subject" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="sent_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="sent_by_pod" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="job_execution_id" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <!-- Add indexes for queries -->
        <createIndex tableName="email_log" indexName="idx_email_log_sent_at">
            <column name="sent_at"/>
        </createIndex>
        
        <createIndex tableName="email_log" indexName="idx_email_log_recipient">
            <column name="recipient"/>
        </createIndex>
        
        <rollback>
            <dropTable tableName="email_log"/>
        </rollback>
    </changeSet>

</databaseChangeLog>